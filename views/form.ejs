<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>New Book</title>
  </head>
  <body>
    
    <%- include('./partials/scripts') %> <%- include('./partials/nav') %>
    <div class="container m-5">
    <div class="d-flex justify-content-center"><h1 class="fs-3 mb-3">Add new Book</h1></div>
    <form method="POST" action="/api/newbook">
      <div class="form-floating mb-3">
        <input
          type="text"
          class="form-control"
          id="floatingInput"
          name="booktitle"
          placeholder="book"
          required
        />
        <label for="floatingInput">Book Title</label>
      </div>
      <div class="form-floating mb-3">
        <input
          type="text"
          class="form-control"
          id="floatingInput"
          name="author"
          placeholder="book"
        />
        <label for="floatingInput">Author</label>
      </div>
      <div class="form-floating mb-3">
        <select
          class="form-select"
          name="genre"
          id="Genre"
          placeholder="book"
          aria-label="Floating label select example"
        >
          <option value="romance">Romance</option>
          <option value="action">Action</option>
          <option value="comedy">Comedy</option>
          <option value="drama">Drama</option>
          <option value="sci-fi">Sci-fi</option>
          <option value="thriller">Thriller</option>
          <option value="mystery">Mystery</option>
          <option value="adventure">Adventure</option>
          <option value="fantasy">Fantasy</option>
          <option value="horror">Horror</option>
        </select>
        <label for="floatingInput">Genre</label>
      </div>
      <div class="form-floating mb-3">
        <input
          type="number"
          class="form-control"
          id="floatingInput"
          name="publication_year"
          placeholder="book"
          min="1950"
          max="2024"
        />
        <label for="floatingInput">Publication Year</label>
      </div>

      <div class="form-floating mb-3">
        <input
          type="text"
          class="form-control"
          id="floatingInput"
          name="ISBN"
          placeholder="book"
        />
        <label for="floatingInput">ISBN</label>
      </div>
      <div class="form-floating mb-3">
        <input
          type="number"
          class="form-control"
          step="0.1"
          id="floatingInput"
          placeholder="book"
          name="ratings"
          min="0"
          max="5"
        />
        <label for="floatingInput">Ratings</label>
      </div>
      <div class="form-floating mb-3">
        <input
          type="text"
          class="form-control"
          id="floatingInput"
          placeholder="book"
          name="imageURL"
        />
        <label for="floatingInput">Image URL</label>
      </div>
      <div class="form-floating mb-3">
        <textarea
          class="form-control"
          id="floatingInput"
          name="description"
          style="height: 100px"
          placeholder="book"
        ></textarea>
        <label for="floatingInput">Description</label>
      </div>
      <div class="d-flex justify-content-center"><button type="submit" class="btn btn-outline-success">Create Book</button></div>
    </form>
    </div>
  </body>
</html>
